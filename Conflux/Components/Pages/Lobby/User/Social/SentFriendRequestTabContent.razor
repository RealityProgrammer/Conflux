@using Conflux.Components.Shared
@using Conflux.Components.Shared.Icons
@using Conflux.Database
@using Conflux.Database.Entities
@using Conflux.Helpers
@using Conflux.Services.Abstracts
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using System.Collections.Concurrent
@using System.Diagnostics
@using System.Security.Claims

@implements IDisposable

@inject ILogger<SentFriendRequestTabContent> Logger
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext ApplicationDatabase
@inject IFriendshipService FriendshipService

<button class="mb-2 button-primary" @onclick="HandleTest">
    Test
</button>

<div class="flex-none px-3 outline-none border rounded-lg bg-gray-700/60 border-gray-600 focus-within:ring-2 focus-within:ring-indigo-600 transition duration-300 flex flex-row items-center">
    <Search class="size-4 fill-white flex-none mr-2"/>

    <input type="text" class="flex-1 outline-none border-none w-full h-11 focus:outline-none" @bind="_nameSearch" @bind:after="HandleSearchDebouncing" maxlength="32">
</div>

<div class="flex-1 overflow-auto mt-2 border border-gray-600 rounded-lg">
    <Virtualize @ref="_virtualizeContainer" ItemsProvider="LoadProvider" OverscanCount="3">
        <ChildContent Context="item">
            <div class="h-16 px-4 py-1 border-b border-b-gray-600 flex flex-row items-center hover:bg-gray-600/40 group">
                <Avatar ImageSrc="@item.Receiver!.ProfilePicturePath" ImageAlt="@(item.Receiver!.ProfilePicturePath != null ? "Avatar" : string.Empty)" ScaleX="item.Receiver.ProfilePictureScaleX" ScaleY="item.Receiver.ProfilePictureScaleY" class="flex-none h-12 mr-2"/>
                
                <div class="flex-1 flex flex-col">
                    <p class="font-semibold">@item.Receiver.DisplayName</p>
                    <p class="text-sm">@item.Receiver.UserName</p>
                </div>
                
                <div class="flex-none flex-row gap-1 hidden group-hover:flex items-center">
                    <SpinnerButton IsSpinning="_cancellingRequests.ContainsKey(item)" class="p-1.5 rounded-full hover:bg-gray-400/50 cursor-pointer" @onclick="() => HandleCancelFriendRequest(item)" SpinnerCssClass="size-6 fill-white">
                        <Cross Size="CrossSize.Normal" class="size-6 fill-white"/>
                    </SpinnerButton>
                
                    <button class="p-1.5 rounded-full hover:bg-gray-400/50 cursor-pointer">
                        <ThreeDots class="size-6 fill-white"/>
                    </button>
                </div>
            </div>
        </ChildContent>
        
        <EmptyContent>
            <div class="flex flex-row justify-center items-center h-full">
                <p class="text-gray-400">Social awkward eh?</p>
            </div>
        </EmptyContent>
    </Virtualize>
</div>

@code {
    private string _nameSearch = string.Empty;
    private string _normalizedNameSearch = string.Empty;

    // TODO: First search always have to wait before result display, can we skip that and only wait on
    // later searches?
    private Debouncer _searchDebouncer = null!;

    private Virtualize<FriendRequest> _virtualizeContainer = null!;

    [CascadingParameter] private Task<AuthenticationState> AuthenticationState { get; set; } = null!;
    private string _userId = null!;

    private ConcurrentDictionary<FriendRequest, byte> _cancellingRequests = [];

    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            _searchDebouncer = new(Logger, OnDebounceEnd, TimeSpan.FromMilliseconds(250));

            var authState = await AuthenticationState;
            _userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier)!;
            
            Debug.Assert(_userId != null);
        }
    }

    private async Task HandleSearchDebouncing() {
        await _searchDebouncer.Start();
    }

    private async Task OnDebounceEnd(CancellationToken token) {
        _normalizedNameSearch = UserManager.NormalizeName(_nameSearch);
        
        await _virtualizeContainer.RefreshDataAsync();
    }

    private async ValueTask<ItemsProviderResult<FriendRequest>> LoadProvider(ItemsProviderRequest request) {
        var query = ApplicationDatabase.Users
            .Where(u => u.Id == _userId)
            .SelectMany(x => x.SentFriendRequests)
            .AsNoTracking();
        
        if (!string.IsNullOrEmpty(_normalizedNameSearch)) {
            query = query.Where(req => 
                req.Receiver!.UserName!.Contains(_normalizedNameSearch) || EF.Functions.ILike(req.Receiver.DisplayName, $"%{_normalizedNameSearch}%"));
        }
        
        int totalCount = await query.CountAsync();

        if (totalCount == 0) {
            return new([], 0);
        }

        var requests = await query
            .OrderBy(x => x.CreatedAt)
            .Skip(request.StartIndex)
            .Take(request.Count)
            .Include(r => r.Receiver)
            .AsNoTracking()
            .ToListAsync();
        
        return new(requests, totalCount);
    }

    private async Task HandleCancelFriendRequest(FriendRequest request) {
        if (_cancellingRequests.TryAdd(request, 0)) {
            try {
                await FriendshipService.CancelFriendRequest(request.SenderId, request.ReceiverId);
            } finally {
                _cancellingRequests.TryRemove(request, out _);

                if (_cancellingRequests.IsEmpty) {
                    await _virtualizeContainer.RefreshDataAsync();
                }
            }
        }
    }

    private async Task HandleTest() {
        await FriendshipService.SendFriendRequest("39e4105a-03f7-4c10-b423-34e92ca971ca", "425faf85-4f96-4d03-afbb-90f5f8d6d253");
        await Task.Delay(1000);
        await FriendshipService.CancelFriendRequest("39e4105a-03f7-4c10-b423-34e92ca971ca", "425faf85-4f96-4d03-afbb-90f5f8d6d253");
        await Task.Delay(1000);
        await FriendshipService.SendFriendRequest("39e4105a-03f7-4c10-b423-34e92ca971ca", "425faf85-4f96-4d03-afbb-90f5f8d6d253");
    }

    public void Dispose() {
        _searchDebouncer.Dispose();
    }
}