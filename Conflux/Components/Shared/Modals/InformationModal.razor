@inherits BaseModal

<div class="flex flex-row justify-center items-center size-full text-white">
    <Card>
        <CardHeader Title="@Title" Subtext="@Subtitle" OnCloseRequested="CloseModal"/>

        <CardContent class="pb-3">
            @Body
        </CardContent>
        
        <CardFooter class="flex flex-row justify-end gap-2">
            <button type="button" class="button-primary w-24" @onclick="CloseModal">Ok</button>
        </CardFooter>
    </Card>
</div>

@code {
    [Parameter, EditorRequired] public string Title { get; set; }
    [Parameter] public string? Subtitle { get; set; }
    
    [Parameter, EditorRequired] public RenderFragment Body { get; set; }
}