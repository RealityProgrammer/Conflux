@using Conflux.Helpers
@inherits BaseModal

<div class="flex flex-row justify-center items-center size-full text-white">
    <Card>
        <CardHeader Title="@Title" OnCloseRequested="@((Action<object?>)CloseModal)"/>

        <CardContent class="pb-3">
            @Body
        </CardContent>
        
        <CardFooter class="flex flex-row justify-end gap-2">
            <button type="button" class="button-primary w-24" @onclick="EventUtils.AsNonRenderingEventHandler(CloseModal)">Ok</button>
        </CardFooter>
    </Card>
</div>

@code {
    [Parameter, EditorRequired] public required string Title { get; set; }
    [Parameter, EditorRequired] public required RenderFragment Body { get; set; }
}