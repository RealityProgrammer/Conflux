@switch (Type) {
    case MessageAttachmentType.Image:
        <img src="@ResourcePath" alt="" class="max-w-3xl max-h-80 h-full rounded-lg aspect-auto">
        break;
                                                        
    case MessageAttachmentType.Audio:
        <audio controls class="w-full rounded-lg">
            <source src="@ResourcePath">
        </audio>
        break;
                                                        
    case MessageAttachmentType.Video:
        <video controls class="max-w-3xl max-h-80 h-full aspect-auto">
            <source src="@ResourcePath">
        </video>
        break;
}

@code {
    [Parameter, EditorRequired] public required MessageAttachmentType Type { get; set; }
    [Parameter, EditorRequired] public required string ResourcePath { get; set; }
}